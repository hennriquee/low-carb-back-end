generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  category String
  title String
  text String
  price Json?
  zerolactose Boolean @default(false)
  zerogluten Boolean @default(false)
  zerosugar Boolean @default(false)
  images     String[]
}

